---
import type { ProjectItem } from "../../config";

interface Props {
  project: ProjectItem;
}

const { project } = Astro.props;
---

<a
  href={project.link}
  target="_blank"
  rel="noopener noreferrer"
  class="group flex flex-col justify-between p-6 bg-white border border-gray-100 rounded-xl transition-all duration-300 hover:shadow-lg hover:border-gray-200 hover:-translate-y-1 h-full"
>
  <div>
    {/* Header: Folder Icon + External Link */}
    <div class="flex justify-between items-center mb-4">
      {/* Folder Icon */}
      <div class="text-[var(--accent-color)]" style={`color: ${import.meta.env.ACCENT_COLOR || '#3b82f6'}`}>
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
        </svg>
      </div>
      
      {/* GitHub/Link Icon */}
      <div class="text-gray-400 group-hover:text-gray-900 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
      </div>
    </div>

    <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-[var(--accent-color)] transition-colors">
      {project.name}
    </h3>
    
    <p 
        class="text-sm text-gray-600 leading-relaxed mb-6"
        set:html={project.description}
    />
  </div>

  {/* Tech Stack Footer - CHIP STILE "MINOR" */}
  <div class="flex flex-wrap gap-2 mt-auto">
    {project.skills && project.skills.map((skill) => (
      <span 
        class="px-2 py-1 bg-gray-100 text-gray-700 rounded-md text-xs font-mono font-medium border border-gray-200"
      >
        {skill}
      </span>
    ))}
  </div>
</a>